---
import '@fontsource-variable/inter';

// 'DM Sans'
// Nunito
// Dosis
// Outfit
// Roboto
// Literata
// 'IBM Plex Sans'
// Karla
// Poppins
// 'Fira Sans'
// 'Libre Franklin'
// Inconsolata
// Raleway
// Oswald
// 'Space Grotesk'
// Urbanist
---

<style is:inline>
  :root {
    --aw-font-sans: 'Inter Variable';
    --aw-font-serif: 'Inter Variable';
    --aw-font-heading: 'Inter Variable';

    --aw-color-primary: #0c9b77;
    --aw-color-secondary: #19b687;
    --aw-color-accent: #0d8f59;

    --aw-color-text-heading: rgb(0 0 0);
    --aw-color-text-default: rgb(16 16 16);
    --aw-color-text-muted: rgb(16 16 16 / 66%);
    --aw-color-bg-page: rgb(255 255 255);

    --aw-color-bg-page-dark: rgb(10, 10, 10);

    ::selection {
      background-color: rgb(244, 255, 251);
    }
  }

  .dark {
    --aw-font-sans: 'Inter Variable';
    --aw-font-serif: 'Inter Variable';
    --aw-font-heading: 'Inter Variable';

    --aw-color-primary: #319e5b;
    --aw-color-secondary: #22c56c;
    --aw-color-accent: #0bf5bb;

    --aw-color-text-heading: rgb(247, 248, 248);
    --aw-color-text-default: rgb(229, 246, 239);
    --aw-color-text-muted: rgba(246, 229, 229, 0.66);
    --aw-color-bg-page: rgb(17, 17, 17);

    ::selection {
      background-color: black;
      color: snow;
    }
  }
</style>
